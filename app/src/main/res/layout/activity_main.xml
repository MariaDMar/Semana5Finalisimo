<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3d5cc2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_contacto"
                android:textColor="#FFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#FFFF"
                android:hint="Nombre del contacto" />

            <EditText
                android:id="@+id/et_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#FFFF"
                android:textColor="#FFFF"
                android:hint="TelÃ©fono" />

            <Switch
                android:id="@+id/swt_genero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:gravity="left"
                android:showText="true"
                android:textColor="#FFFFFF"
                android:layout_marginHorizontal="5dp"
                android:text="GENERO"
                android:textOff="M"
                android:textOn="F" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_generar"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/btn_estilo1"

            android:src="@drawable/ic_add" />

    </LinearLayout>

    <ListView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/lv_contactos"/>

    />
</LinearLayout>